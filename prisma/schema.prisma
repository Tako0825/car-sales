generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 枚举 - 员工职位
enum Role {
  USER
  ADMIN
}

// 员工
model User {
  id       Int     @id @default(autoincrement())
  username String
  password String
  phone    String  @unique @db.VarChar(11)
  role     Role    @default(USER)
  move     Move[]
  order    Order[]
}

// 汽车产品
model Product {
  id             Int              @id @default(autoincrement())
  name           String
  model          String
  price          Float            @db.Double
  introduce      String           @db.Text
  supplyRelation SupplyRelation[]
  move           Move[]
  order          Order[]
}

// 供应商
model Supplier {
  id             Int              @id @default(autoincrement())
  name           String
  phone          String           @unique @db.VarChar(11)
  company        String
  supplyRelation SupplyRelation[]
}

// 供应关系
model SupplyRelation {
  id         Int      @id @default(autoincrement())
  quantity   BigInt
  supplier   Supplier @relation(fields: [supplierId], references: [id])
  supplierId Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
}

// 仓库
model Warehouse {
  id           Int     @id @default(autoincrement())
  location     String
  outboundMove Move[]  @relation("OutboundWareHouse")
  intboundMove Move[]  @relation("InboundWareHouse")
  supplyRelation SupplyRelation[]
}

// 调仓记录
model Move {
  id         Int       @id @default(autoincrement())
  product    Product   @relation(fields: [productId], references: [id])
  productId  Int
  operator   User      @relation(fields: [operatorId], references: [id])
  operatorId Int
  outbound   Warehouse @relation("OutboundWareHouse", fields: [outboundId], references: [id])
  outboundId Int
  inbound    Warehouse @relation("InboundWareHouse", fields: [inboundId], references: [id])
  inboundId  Int
}

// 订单
model Order {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}
